<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h2>Mapa de Barrios</h2>
    </div>
  </div>

  <div class="well">

  <div class="row-fluid">
    <div class="span8">
      <div id ="alert_placeholder"></div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8">
      <!-- Barrio Search (text field) -->
        <div class="input-append">
        <input class="span6" id="search_txt" size="16" type="text" placeholder="Nombre del Barrio..." onfocus="clearThis(this)">
        <button class="btn" id="search" type="button" onclick="findBarrioData()">Mostrar el Barrio</button>
        </div>
    </div>
    <div class="span4">
      <!-- Barrio name -->
      <p id="barrio_id"></p>
    </div>
  <div class="row-fluid">
    <div class="span8">
      <!-- Map container -->
      <div id="map_canvas" style="height: 550px; margin: 0px; border: 1px solid #ccc;">
      </div>
    </div>
    <div class="span4">
      <!-- Barrio info container -->
      <div id="info_barrio" style="height: 550px; margin: 0px; border: 1px solid #ccc; background-color: #ffffff;">
        <dl class="dl-horizontal" style="font-size: 90%;">
          <dt>Otro nombre:</dt><dd id="other_name_barrio_id">-</dd>
          <dt>Partido:</dt><dd id="partido_id">-</dd>
          <dt>Localidad:</dt><dd id="localidad_id">-</dd>
          <dt>Cantidad de Familias:</dt><dd id="families_id">-</dd>
          <dt>A&ntilde;o de inicio:</dt><dd id="start_year_id">-</dd>
          <hr>
          <dt>Desag&uuml;es cloacales:</dt><dd id="sewage_id">-</dd>
          <dt>Agua potable:</dt><dd id="water_id">-</dd>
          <dt>Sistema el&eacute;ctrico:</dt><dd id="electrical_id">-</dd>
          <dt>Red de gas:</dt><dd id="gas_id">-</dd>
        </dl>
      </div>
    </div>
  </div>

  </div>

</div>
<script type="text/javascript">
  // Set a callback to run when the Google Visualization library is loaded.
  google.setOnLoadCallback(initializeMapBarriosPage);
</script>