							#
							begin
              					#@total_barrios = @ft.execute @qry_total_barrios
              					@total_families = @ft.execute @qry_total_families
              					tot_villas = number_with_delimeter(@total_families[0][:"count()"].to_i)
              					tot_families = number_with_delimeter(@total_families[0][:families].to_i)
								rescue GData::Client::BadRequestError
				 				tot_villas = '---'
								tot_families = '---'
							end
            			%>
<!-- 
            			En las provincias de Buenos Aires hay
            			<strong><#%= tot_villas %></strong>
            			villas y asentamientos, en los que residen&nbsp;
            			<strong><#%= tot_families %></strong>
            			familias.
 -->
          			</p>
			
